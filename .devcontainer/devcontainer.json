{
	"name": "creeper",
	"image": "ros-slam",
	"mounts": [
		{
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix",
			"type": "bind"
		},
		{
			"source": "/dev",
			"target": "/dev",
			"type": "bind"
		}
	],
	"containerEnv": {
		"DISPLAY": ":0"
	},
	"runArgs": [
		"--network",
		"host"
	]
}